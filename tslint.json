{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended",
        "tslint-eslint-rules"
    ],
    "rules": {
        "arrow-parens": [
            true,
            "ban-single-arg-parens"
        ],
        "brace-style": [
            false,
            "stroustrup",
            {
                "allowSingleLine": true
            }
        ],
        "indent": [
            true,
            "spaces"
        ],
        "interface-name": false,
        "max-line-length": [
            true,
            120
        ],
        "no-console": false,
        "no-empty": false,
        "no-string-literal": false,
        "object-literal-sort-keys": false,
        "semicolon": [
            true,
            "always"
        ],
        "trailing-comma": false,
        "variable-name": false
    },
    "rulesDirectory": []
}